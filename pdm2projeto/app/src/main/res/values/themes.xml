<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pdm2projeto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cor principal da barra superior -->
        <item name="colorPrimary">@color/app_green</item>
        <!-- Cor da status bar (opcional) -->
        <item name="colorPrimaryVariant">@color/app_green</item>
        <!-- Cor do texto (para evitar baixo contraste) -->
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorSecondaryContainer">@color/app_green</item>

        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Home Page -->
        <item name="colorOnBackground">@color/app_primary_text</item>
        <item name="colorOnSurface">@color/app_secondary_text</item>
    </style>

    <style name="Theme.Pdm2projeto" parent="Base.Theme.Pdm2projeto">
        <!-- Cor principal da barra superior -->
        <item name="colorPrimary">@color/app_green</item>
        <!-- Cor da status bar (opcional) -->
        <item name="colorPrimaryVariant">@color/app_green</item>
        <!-- Cor do texto (para evitar baixo contraste) -->
        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorSecondaryContainer">@color/app_green</item>

        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="colorOnBackground">@color/app_primary_text</item>
        <item name="colorOnSurface">@color/app_secondary_text</item>
    </style>
</resources>