<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@drawable/dialog_rounded_corners</item>
    </style>
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:strokeColor">@color/app_green</item> <!-- Cor da borda -->
        <item name="android:radius">12dp</item> <!-- Bordas arredondadas -->
    </style>
</resources>