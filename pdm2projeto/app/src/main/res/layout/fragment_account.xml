<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fillViewport="true"> <!-- Ensures content fills the screen -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom">

        <!-- Profile Image Section -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_app"
                android:contentDescription="Profile Logo"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/edit_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp" />
        </FrameLayout>

        <!-- User Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="User Name"
            android:padding="10dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="example@gmail.com"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="false"
            android:minHeight="48dp" />

        <!-- Change Password -->
        <TextView
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mudar a palavra-passe"
            android:textColor="@color/app_primary"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />

        <!-- Space Filler to Push Content to Top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Delete Account Button -->
        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#C00808"
            android:text="Apagar conta"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp" />

        <!-- Confirmation text below delete button -->
        <TextView
            android:id="@+id/delete_account_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos os seus dados serão apagados"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Account Creation Date (Stuck at Bottom) -->
        <TextView
            android:id="@+id/account_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conta criada desde: #data da criação"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
