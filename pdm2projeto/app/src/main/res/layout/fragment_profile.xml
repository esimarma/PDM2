<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Top Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#A9A9A9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header Title -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Menu Icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Logged-Out State -->
    <LinearLayout
        android:id="@+id/logged_out_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logged_out_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_app"
            android:contentDescription="Logo" />

        <!-- Logged Out Text -->
        <TextView
            android:id="@+id/logged_out_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda não tem sessão iniciada"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sessão"
            android:layout_marginTop="16dp" />

        <!-- "Ainda não tem conta?" Text -->
        <TextView
            android:id="@+id/text_no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda não tem conta?"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- "Criar conta" Text Button -->
        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar conta"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/text_no_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Logged-In State -->
    <LinearLayout

        android:id="@+id/logged_in_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <!-- Profile Logo -->
        <ImageView
            android:id="@+id/profile_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_app"
            android:contentDescription="Profile Logo"
            android:layout_gravity="center_horizontal" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá Utilizador"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp" />

        <!-- Favorites Section -->
        <TextView
            android:id="@+id/favorites_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Placeholder for Favorite Places -->
        <TextView
            android:id="@+id/favorite_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar #2"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
